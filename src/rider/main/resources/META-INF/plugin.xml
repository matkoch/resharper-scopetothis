<idea-plugin require-restart="true">
  <id>com.jetbrains.plugins.scopetothis</id>
  <name>ScopeToThis</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://project-url">Author</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>Provisional implementation of a <i>Scope To This</i> feature via <a href="https://www.jetbrains.com/help/rider/Extending_Your_Solution.html#adding-external-files-and-folders">attached folders</a>.</p>
]]>
  </description>

  <actions resource-bundle="messages.RiderPluginScopeToThisBundle">
    <action id="ScopeToThis" class="com.jetbrains.rider.plugins.scopetothis.ScopeToThisAction" />

    <group id="SolutionExplorerPopupMenu.ProjectManagement.ScopeToThis">
      <reference ref="ScopeToThis"/>
      <add-to-group group-id="SolutionExplorerPopupMenu.ProjectManagement" relative-to-action="DetachFolderAction" anchor="before"/>
    </group>
  </actions>

</idea-plugin>
